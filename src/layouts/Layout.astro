---
// src/layouts/Layout.astro
export interface Props {
  title: string;
}

const { title } = Astro.props;

import "../styles/global.css";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="UselessChat - Eternal blockchain conversations" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-300 text-black min-h-screen" style="font-family: 'MS Sans Serif', sans-serif; font-size: 11px;">
    <slot />
  </body>
</html>

<style is:global>
  /* Global styles */
  * {
    box-sizing: border-box;
  }
  
  body {
    margin: 0;
    padding: 0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
  }
  
  /* Windows 98 style scrollbar */
  ::-webkit-scrollbar {
    width: 16px;
  }
  
  ::-webkit-scrollbar-track {
    background: #c0c0c0;
    border: 1px solid #808080;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #c0c0c0;
    border: 1px outset #c0c0c0;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #a0a0a0;
  }
  
  ::-webkit-scrollbar-button {
    background: #c0c0c0;
    border: 1px outset #c0c0c0;
    height: 16px;
  }
  
  ::-webkit-scrollbar-button:hover {
    background: #a0a0a0;
  }
  
  /* Windows 98 button style */
  .win98-button {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
    padding: 3px 8px;
    cursor: pointer;
  }
  
  .win98-button:hover {
    background: #d0d0d0;
  }
  
  .win98-button:active {
    border: 2px inset #c0c0c0;
  }
  
  .win98-button:disabled {
    color: #808080;
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
    cursor: default;
  }
  
  /* Windows 98 input style */
  .win98-input {
    background: white;
    border: 2px inset #c0c0c0;
    font-family: 'MS Sans Serif', sans-serif;
    font-size: 11px;
    padding: 2px 4px;
  }
  
  .win98-input:focus {
    outline: none;
  }
  
  /* Windows 98 window style */
  .win98-window {
    background: #c0c0c0;
    border: 2px outset #c0c0c0;
  }
  
  .win98-window-header {
    background: linear-gradient(90deg, #0a246a 0%, #a6caf0 100%);
    color: white;
    padding: 2px 4px;
    font-weight: bold;
    font-size: 11px;
  }
  
  .win98-sunken {
    border: 2px inset #c0c0c0;
    background: #f0f0f0;
  }
</style>